{
    "app-id":"com.rafaelmardojai.WebfontKitGenerator",
    "runtime":"org.gnome.Platform",
    "runtime-version":"3.36",
    "sdk":"org.gnome.Sdk",
    "command":"webfontkitgenerator",
    "finish-args":[
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup":[
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules":[
        {
            "name":"FontTools",
            "buildsystem":"simple",
            "build-commands":[
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources":[
                {
                    "type":"archive",
                    "url":"https://files.pythonhosted.org/packages/8d/9f/a1188780fd723ee8b02ba02d57d3c3a42b8914190d0c79e306573f5d18ba/fonttools-4.4.1.zip",
                    "sha256":"fab07ad31b4d24d7b9798453f678faa179906d29a3ad15bddb92496f1f9ea122"
                }
            ],
            "modules":[
                {
                    "name":"Brotli",
                    "buildsystem":"simple",
                    "build-commands":[
                        "python3 setup.py install --prefix=/app --root=/"
                    ],
                    "sources":[
                        {
                            "type":"archive",
                            "url":"https://files.pythonhosted.org/packages/cd/9c/7955895f5672ecc85270244582c6b53ff95bb4c24bf77bd9271d42351635/Brotli-1.0.7.zip",
                            "sha256":"0538dc1744fd17c314d2adc409ea7d1b779783b89fd95bcfb0c2acc93a6ea5a7"
                        }
                    ]
                }
            ]
        },
        {
            "name":"libhandy",
            "buildsystem":"meson",
            "config-opts":[
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false",
                "-Dglade_catalog=disabled"
            ],
            "cleanup":[
                "/include",
                "/lib/pkgconfig"
            ],
            "sources":[
                {
                    "type":"git",
                    "url":"https://source.puri.sm/Librem5/libhandy.git",
                    "tag":"v0.80.0",
                    "commit":"b61eefde06040703026f49a0b979588e69f77d3a"
                }
            ]
        },
        {
            "name":"webfontkitgenerator",
            "builddir":true,
            "buildsystem":"meson",
            "sources":[
                {
                    "type":"git",
                    "url":"https://github.com/rafaelmardojai/WebfontKitGenerator.git",
                    "tag":"v0.1.0",
                    "commit":"75b61915cf6be6427b4ae3092ed4830181139834"
                }
            ]
        }
    ]
}
